<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5dp"
    android:scrollbarThumbVertical="@drawable/transparent"
    android:scrollbarTrackVertical="@drawable/transparent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/fl_settings_theme">
        <LinearLayout
            android:id="@+id/colors"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginLeft="4dip" android:layout_marginRight="4dip"
            android:orientation="vertical" >
            <View android:id="@+id/settings_row_divider"
                android:background="@color/divider"
                android:layout_width="fill_parent" android:layout_height="1px"
                android:layout_gravity="top"/>
            <LinearLayout
                android:id="@+id/emoticon_install_info"
                android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="center_vertical">
                <TextView android:id="@+id/emoticon_text_need_app_install"
                    android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                    android:textSize="12dp"
                    android:textColor="#333333"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="top"/>
                <Button android:id="@+id/btn_need_app_install"
                    android:layout_width="fill_parent" android:layout_height="40dp"
                    android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
                    android:layout_marginLeft="22dp" android:layout_marginRight="22dp"
                    android:text="@string/item_store_install"
                    android:textSize="18dp"
                    android:textColor="#fff2ffff"
                    android:background="@drawable/theme_button_background"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/divider"
            android:layout_width="fill_parent" android:layout_height="5px"
            android:layout_gravity="bottom"/>
        <LinearLayout
            android:layout_width="match_parent" android:layout_height="110dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/emoticon_thumb"
                android:scaleType="centerCrop"
                android:layout_width="90dp" android:layout_height="90dp"
                android:layout_marginTop="5dp" android:layout_marginBottom="5dp" />
            <LinearLayout
                android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView android:id="@+id/emoticon_text_title"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:textColor="#333333"/>
                <TextView android:id="@+id/emoticon_text_companyname"
                    android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                    android:textSize="13dp"
                    android:textColor="@android:color/background_dark"/>
                <TextView android:id="@+id/emoticon_text_duration"
                    android:layout_marginTop="2dp" android:layout_marginBottom="3dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                    android:textSize="15dp"
                    android:textColor="#333333"/>
                <View
                    android:background="@color/divider"
                    android:layout_width="fill_parent" android:layout_height="5px"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <TextView android:id="@+id/emoticon_text_price"
                    android:layout_marginTop="2dp" android:layout_marginBottom="3dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                    android:text="W 2,000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#e33333"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent" android:layout_height="55dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <Button android:id="@+id/btn_theme_present_recomm"
                android:layout_width="match_parent" android:layout_height="40dp"
                android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                android:text="@string/item_store_gift"
                android:textSize="18dp"
                android:textColor="#fff2ffff"
                android:background="@drawable/theme_button_background"
                android:layout_weight="1.0"/>
            <Button android:id="@+id/btn_theme_buy_and_down"
                android:layout_width="match_parent" android:layout_height="40dp"
                android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                android:text="@string/item_store_download"
                android:textSize="18dp"
                android:textColor="#fff2ffff"
                android:background="@drawable/theme_button_background"
                android:layout_weight="1.0"/>
        </LinearLayout>
        <View
            android:background="@color/divider"
            android:layout_width="fill_parent" android:layout_height="1px"
            android:layout_gravity="bottom"/>
        <LinearLayout
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/emoticon_text_info"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                android:textColor="#333333"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="top"/>

            <LinearLayout
                android:layout_width="fill_parent" android:layout_height="match_parent"
                android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical|center_horizontal">
                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/emoticon_thumb_big"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent" android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/emoticon_text_copyright"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="12dp"
            android:textColor="#333333"
            android:gravity="center"/>
    </LinearLayout>
</ScrollView>