<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:layout_gravity="left"
    android:id="@+id/fl_settings_theme">
    <LinearLayout
        android:layout_width="fill_parent" android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/theme_thumb"
            android:layout_width="90dp" android:layout_height="90dp"
            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
            android:gravity="center_vertical">
            <TextView android:id="@+id/emoticon_row_text_title"
                android:layout_marginTop="2dp" android:layout_marginBottom="2dp"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                android:textSize="20dp"
                android:textColor="#333333"/>
            <TextView android:id="@+id/emoticon_row_text_companyname"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:layout_marginTop="3dp" android:layout_marginBottom="2dp"
                android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                android:textSize="13dp"
                android:textColor="#333333"
                android:textStyle="bold"/>
            <TextView android:id="@+id/emoticon_row_text_price"
                android:layout_marginTop="2dp" android:layout_marginBottom="3dp"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#e33333"/>
        </LinearLayout>
    </LinearLayout>
    <View android:id="@+id/settings_row_divider"
        android:background="@color/divider"
        android:layout_width="fill_parent" android:layout_height="1px"
        android:layout_gravity="bottom"/>
</FrameLayout>